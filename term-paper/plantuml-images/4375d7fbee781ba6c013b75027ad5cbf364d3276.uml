@startuml

start

repeat

  :Тестирование;

    if (Что-то пошло не так?) then (нет)
      #palegreen :Тест пройден;
      break
    endif

    ->ошибка;

    :Сообщение: "Длинное сообщение об ошибке";

repeat while (Что-то пошло не так при\nвыводе сообщения об ошибке?) is (да) not (нет)

:Сообщение: "Всё прошло успешно";

stop

@enduml